<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m" controllerName="sapips.training.odata.controller.Main">
  <Page id="page" title="{i18n>title}">
    <Panel
      xmlns="sap.m" width="auto" expandable="false" expanded="true" id="panel" backgroundDesign="Transparent">
      <headerToolbar>
        <Toolbar id="toolbar" design="Transparent">
          <Title id="title_header" text="Products"/>
        </Toolbar>
      </headerToolbar>
      <content>
      <Text text="{i18n>subHeading}" id="title_subHeader"/>
      </content>
    </Panel>
    <Table id="listProduct" 
    items="{         
    path: '/Products',         
    sorter: {           
    path: 'ProductName',           
    descending: false         
    },         
    filters: {           
    path: 'Discontinued',           
    operator: 'EQ',           
    value1: false         
    }       
    }">
      <columns>
        <Column id="productColumn">
          <header>
            <Label id="col_product" text="Product"/>
          </header>
        </Column>
        <Column id="supplierColumn">
          <header>
            <Label id="col_supplierID" text="Supplier ID"/>
          </header>
        </Column>
        <Column id="priceColumn">
          <header>
            <Label id="col_price" text="Price"/>
          </header>
        </Column>
      </columns>
      <items>
        <ColumnListItem id="_IDGenColumnListItem">
          <cells>
            <ObjectIdentifier id="lbl_productName" title="{ProductName}" text="{i18n>productID} {ProductID}"/>
            <Text id="lbl_supplierID" text="{SupplierID}"/>
            <ObjectIdentifier id="lbl_unitPrice" title="{UnitPrice}" text="{QuantityPerUnit}"/>
          </cells>
        </ColumnListItem>
      </items>
    </Table>
  </Page>
</mvc:View>