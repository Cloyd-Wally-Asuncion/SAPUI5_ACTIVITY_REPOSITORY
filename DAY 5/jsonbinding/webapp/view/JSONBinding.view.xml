<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m" controllerName="sapips.training.jsonbinding.controller.JSONBinding">
  <Page id="page" title="{i18n>title}">
    <content>
      <!-- Panel 1 -->
      <Panel
        xmlns="sap.m" width="auto" expandable="false" id="dataBindingBasicsPanel" headerText="Data Binding Basics" class="sapUiResponsiveMargin" expanded="true">
        <content>
          <sap.ui.layout.form:SimpleForm
            xmlns:sap.ui.layout.form="sap.ui.layout.form"
            xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form1">
            <sap.ui.layout.form:content>
              <Label text="EID" id="lbl_eid"/>
              <Input width="100%" id="fld_eid" value="{DataModel>EID}" enabled="{DataModel>/Enabled}"/>
              <Label text="Enabled" id="fld_enabled"/>
              <CheckBox
                xmlns:mvc="sap.ui.core.mvc"
                xmlns="sap.m" selected="{DataModel>/Enabled}" id="cb_enabled"/>
              </sap.ui.layout.form:content> 
            </sap.ui.layout.form:SimpleForm>
          </content>
        </Panel>
        <!-- Panel 2 -->
        <Panel
          xmlns="sap.m" width="auto" expandable="false" expanded="true" id="addressDetailsPanel" headerText="Address Details" class="sapUiResponsiveMargin">
          <content>
            <sap.ui.layout.form:SimpleForm
              xmlns:sap.ui.layout.form="sap.ui.layout.form"
              xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form2">
              <sap.ui.layout.form:content>
                <Label text="Address" id="lbl_add"/>
                <Text id="txt_add" text="{DataModel>/Address/Street} {DataModel>/Address/ZIP} {DataModel>/Address/City} {DataModel>/Address/Country}" class="sapUiSmallMarginBottom"/>
                <Link text="Send Email" href="{ parts: [ { path: 'DataModel>/Eid' }, { path: 'i18n>domain' }, { path: 'i18n>mailSubject' }, { path: 'i18n>mailBody' } ], formatter: '.formatter.formatMail' }" id="sendEmailLink"/>
                  <Label text="Sales Amount" id="lbl_salesAmount" class="sapUiSmallMarginBottom"/>
                  <Input width="100%" id="salesAmountInput" class="sapUiSmallMarginBegin" description="{DataModel>/CurrencyCode}" value="{ parts: [ { path: 'DataModel>/SalesAmount' }, { path: 'DataModel>/CurrencyCode' }], type: 'sap.ui.model.type.Currency', formatOptions: { showMeasure: false } }"/>
                </sap.ui.layout.form:content>
              </sap.ui.layout.form:SimpleForm>
            </content>
          </Panel>
          <!-- Panel 3 -->
          <Panel
            xmlns="sap.m" width="auto" expandable="false" expanded="true" id="aggregationBindingPanel" headerText="Aggregation Binding" class="sapUiResponsiveMargin">
            <List id="list0" items="{ProductsModel>/Products}" mode="SingleSelectMaster" selectionChange="onItemPress">
                    <items>
                        <ObjectListItem id="objectListItem0" title="{ProductsModel>ProductName}" number="{ parts: [ {path: 'ProductsModel>UnitPrice'}, {path: 'DataModel>/CurrencyCode'} ], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false}}" numberUnit="{DataModel>/CurrencyCode}">
                            <attributes>
                                <ObjectAttribute id="objectAttribute0" title="{i18n>stockOnHand}" text="{ProductsModel>QuantityPerUnit}"/>
                                <ObjectAttribute id="objectAttribute1" title="{i18n>currentStockValue}" text="{ parts: [ { path: 'ProductsModel>UnitPrice' }, { path: 'ProductsModel>UnitsInStock' }, { path: 'DataModel>/CurrencyCode' } ], formatter: '.formatter.formatStockValue' }"/>
                            </attributes>
                        </ObjectListItem>
                    </items>
                </List>
          </Panel>
          <!-- Panel 4 -->
          <Panel
            xmlns="sap.m" width="auto" expandable="false" expanded="true" id="productDetailsPanel" headerText="Product Details" class="sapUiResponsiveMargin">
            <content>
              <sap.ui.layout.form:SimpleForm
                xmlns:sap.ui.layout.form="sap.ui.layout.form"
                xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form3">
                <sap.ui.layout.form:content>
                  <Label text="ProductId" id="lbl_productId"/>
                  <Input width="100%" id="inpt_productId" value="{/ProductsModel>ProductID}"/>
                  <Label text="Product Name" id="lbl_productName"/>
                  <Input width="100%" id="inpt_productName" value="{ProductsModel>ProductName}"/>
                  <Label text="QuantityPerUnit" id="lbl_QuanPerUnit"/>
                  <Input width="100%" id="inpt_QuanPerUnit" value="{ProductsModel>QuantityPerUnit}"/>
                  <Label text="UnitPrice" id="lbl_unitPrice"/>
                  <Input width="100%" id="inpt_unitPrice" value="{ProductsModel>UnitPrice}"/>
                  <Label text="UnitsInStock" id="lbl_unitInStock"/>
                  <Input width="100%" id="inpt_unitInStock" value="{ProductsModel>UnitInStock}"/>
                  <Label text="Discontinued" id="lbl_discontinued"/>
                  <Input width="100%" id="inpt_discontinued" value="{ProductsModel>Discontinued}"/>
                </sap.ui.layout.form:content>
              </sap.ui.layout.form:SimpleForm>
            </content>
          </Panel>
        </content>
      </Page>
    </mvc:View>